{
    "manifest_version": 2,
    "name": "dfn-extension",
    "version": "0.0.1",
    "description": "Dectect fake new!",
    "icons": {
        "16": "16x16.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },
    "browser_action": {
        "default_title": "Fake news detection!",
        "default_popup": "login.html"
    },
    "content_scripts": [
        {
            "matches": ["*://www.reddit.com/r/politics/comments/*"],
            "js": ["in-content.js"],
            "css": ["style.css"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
   
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ajax.googleapis.com; object-src 'self'"
    ,
    "offline_enabled": true,
    "permissions": ["tabs", "https://www.reddit.com/*", "activeTab"]
}
